@model MerchantApp.Models.Merchants

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Merchants</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OfficialUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OfficialUrl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SenderEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SenderEmail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subdomain)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subdomain)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IndustryType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IndustryType)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Offers[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Offers[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Offers[0].FriendRewardType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Offers[0].FanRewardType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Offers[0].OfferCategoriesId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Offers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FriendRewardType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FanRewardType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OfferCategoriesId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
